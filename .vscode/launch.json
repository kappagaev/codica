    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest E2E Tests --watch",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "/usr/local/bin/jest",
                "--runInBand",
                "--config",
                "${workspaceRoot}/test/jest-e2e.json",
                "--watch"
